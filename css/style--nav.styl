nav_width =			44px;
nav_height =		nav_width * 1.2;
nav_icon_size =	2.5rem;
nav_color =			blanco;

// Estilos del menú normal
.nav--top
	flex()
	justify-content(space-between)
	width: 100%
	li
		// relative()
		transicion( all 0.5s ease )
		a
			color: el__color;
			block()
			fsize 14px
			text-align: center;
			padding: 1rem 0.2rem
			relative()
			width 100%
			transicion( all 0.3s ease )
			uppercase()
		&:hover
		&.current_page_item
			& > a
				bg el__color
				color blanco
				text-decoration none
		&:hover
			.sub-menu
				max-width: 300%
				padding: 0.5rem
		.sub-menu
			absolute()
			block()
			// left: 0
			margin-top: 0rem
			max-width 0
			overflow hidden
			padding: 0.5rem 0
			transicion( all 0.3s ease )
			bg blanco
			z-index: 30
			a
				block()
				text-align: left
				padding: 0.3rem 1rem
				&:after
					hide()
			li
				width: auto

	.nav--top__list
		flex()
		width: 100%

@media screen and (max-width : med_query )
	.nav--top
		color: el__color;
		cursor: pointer;
		height: auto
		margin-top: 1rem
		transicion( all 0.5s ease )
		width 100%
		z-index: 10;
		&:after
			color color__resaltado
			content: "☰";
			font-size: nav_icon_size;
			right: 5%;
			line-height: 1em;
			position: absolute;
			text-align: right;
			top: 1rem;
			height 1em;
			width: 1em;
		// Estilos de los botones en menú responsive
		li
			talign center
			&:not(.nav--logo)
				width: 100%
			a
				border-bottom: rgba(color__resaltado, 1) 1px solid
				color gris
				fsize 1rem
				padding: 0.5rem 0
				width: 100%
				&:after
					hide()
			&:hover
				.sub-menu
					max-height: 300%
			&.nav--logo
				hide()
				overflow hidden
			.sub-menu
				relative()
				max-width: 100%
				max-height: 0
				padding: 0
	.nav--top__list
		flex-direction(column)
		max-height: 0
		max-width: 100vw !important
		overflow hidden
		padding: 0
		position: relative;
		top: 1rem;
		transicion( all 0.5s ease )
		width: 100%;
		z-index: -1;
	.checkbox-hack__label
		block()
		cursor: pointer;
		height: nav_height;
		right:0;
		margin:0;
		overflow: hidden;
		position: absolute;
		top:0;
		width:  50%;
		z-index: 100;


.checkbox__hack
	display: none;
	&:checked
		& ~ .nav--top
			margin-top: h_logo
			overflow: visible;
			width 100%
			max-height: 100vh
			&:after
				content: "X";
			.nav--top__list
				// height: 100vh
				max-height: 100vh

