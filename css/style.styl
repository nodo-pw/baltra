/* <---------- Secciones semánticas ----------> */

*,
*:before,
*:after
	box-sizing: border-box;
	border 0
	font-family inherit
	font-size f__uno
	font-style inherit
	font-weight inherit
	margin 0
	outline 0
	padding 0
	vertical-align top
	&:focus
		outline 0

::-moz-selection
	background casi__negro
	color #fff
	text-shadow none

::selection
	background casi__negro
	color #fff
	text-shadow none

a 
	color el__color
	text-decoration none
	img
		border 0
	&:focus, &:active, &:hover
		text-decoration underline

blockquote
q
	quotes "" ""
	&:before, &:after
		content ""

body
	bg color__fondo
	color el__color
	font-size f__uno
	font-family f__familia
	inter 1.2
	width 100%
	flex()
	flex-direction(column)
	min-height: 100vh

button
	border none
	background none
	cursor pointer !important
	-webkit-appearance:none 

caption
th
td
	font-weight normal
	text-align left

em
	italic()

fieldset
	border none

html
	font-size f__uno
	font-family f__familia
	overflow-y scroll
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%

input,
textarea
	bg none
	border none
	box-sizing: border-box;
	padding 1rem

img
	max-width 100%
	height auto
	vertical-align top

label
	cursor pointer
		
ol, ul
	list-style none

// p:not(:first-of-type)
// 	text-indent: 1em

strong
	bold()

svg:not(:root)
	overflow: hidden;

table
	border-collapse separate
	border-spacing 0

::-webkit-input-placeholder
::-webkit-textarea-placeholder
	color #757575
	font-weight: 600
	opacity 1
	font-size f__uno * 0.85
:-moz-placeholder
	color 757575
	font-weight: 600
	opacity 1
	font-size f__uno * 0.85
::-moz-placeholder
	color 757575
	font-weight: 600
	opacity 1
	font-size f__uno * 0.85
:-ms-input-placeholder
:-ms-textarea-placeholder
	color 757575
	font-weight: 600
	opacity 1
	font-size f__uno * 0.85

