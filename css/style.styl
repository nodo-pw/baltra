/* <---------- Valores Stylus ----------> */
@import "valoresDefault.styl"

@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,600,700');

f__familia = 'Open Sans', sans-serif;
f__uno = 18px

el__color = #3A3C39
color__fondo = #E0E0E0
// color__resaltado = #333
casi__blanco = #F2F2F2
casi__negro = #221E1F
color__rojo = #C22026
color__gris__oscuro = #3A3C39

max_width = 1200px
med_query = 720px

// Estilos de fuentes
